<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/black"
    tools:context=".MainActivity">

    <com.vivekvishwanath.animatedrating.views.AnimatedRatingBar
        android:id="@+id/rating_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:max_rating="10"
        app:starting_rating="5"
        app:empty_symbol="@drawable/avd_close_to_check"
        app:filled_symbol="@drawable/avd_check_to_close"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/rating_entry"
        android:backgroundTint="@android:color/white"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/set_rating_button"
        android:textColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/get_rating_button"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Get Rating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/set_rating_button"
        app:layout_constraintBottom_toTopOf="@id/get_rating_button"
        android:text="Set Rating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</android.support.constraint.ConstraintLayout>