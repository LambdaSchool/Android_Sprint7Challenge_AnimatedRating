<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MainActivity">

    <com.example.customstarrating.RatingsLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        app:alternate_stars="true"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/star_rating_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:max_rating="11"
        app:starting_rating="2"
        android:padding="20dp"
        tools:context=".MainActivity">

        <!--<com.example.customstarrating.StarRating
            android:layout_width="match_parent"
            android:layout_height="match_parent" />-->

    </com.example.customstarrating.RatingsLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/button_minus"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/minus_star_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Hello World!" />

        <ImageView
            android:id="@+id/button_plus"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/add_star_button"
            android:text="Hello World!" />


    </android.support.constraint.ConstraintLayout>



</LinearLayout>